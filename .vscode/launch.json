  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Tests",
      "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
      "cwd": "${workspaceRoot}",
      "sourceMaps": true,
      "args": [
        "--config",
        "jest.json",
        "-i"
      ],
      "env": {
        "NODE_ENV": "test",
        "PORT": 3000
      },
      "internalConsoleOptions": "openOnFirstSessionStart",
      "console": "integratedTerminal"
    }
  ]
}